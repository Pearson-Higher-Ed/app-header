{
  "name": "@pearson-components/app-header",
  "version": "1.0.0",
  "description": "Global responsive header for Pearson applications.",
  "main": "./main.js",
  "scripts": {
    "test": "./node_modules/karma/bin/karma start karma.conf.js",
    "build": "webpack -p",
    "dev-setup": "mkdir -p fonts && cp ./node_modules/pearson-elements/dist/fonts/* ./fonts",
    "dev": "npm run dev-setup && webpack-dev-server --devtool eval --hot --progress --colors",
    "version": "npm run gen-changelog && git add CHANGELOG.md && npm run gen-shrinkwrap && git add npm-shrinkwrap.json",
    "ci": "npm test && npm run build",
    "gen-changelog": "node ./npm_scripts/gen-changelog.js",
    "release": "node ./npm_scripts/release.js",
    "postpublish": "npm access public && echo 'Package scope set to public!'",
    "gen-shrinkwrap": "node ./npm_scripts/gen-shrinkwrap.js"
  },
  "keywords": [
    "pearson-components",
    "app-header"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Pearson-Higher-Ed/app-header.git"
  },
  "license": "MIT",
  "devDependencies": {
    "browserify": "^10.2.4",
    "browserify-istanbul": "^0.2.1",
    "conventional-changelog": "^1.1.0",
    "coveralls": "^2.11.4",
    "css-loader": "^0.23.1",
    "expect.js": "^0.3.1",
    "file-loader": "^0.8.5",
    "karma": "^0.12.31",
    "karma-browserify": "^4.0.0",
    "karma-chrome-launcher": "^0.2.0",
    "karma-coverage": "^0.2.6",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-sinon": "^1.0.4",
    "mocha": "^2.1.0",
    "node-sass": "^3.4.2",
    "pearson-elements": "^0.2.0",
    "sass-loader": "^3.1.2",
    "sinon": "^1.15.3",
    "style-loader": "^0.13.0",
    "superviews.js": "0.0.5",
    "textrequireify": "^2.1.1",
    "travis-multirunner": "^2.7.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "dom-delegate": "^2.0.3",
    "object-assign": "^4.0.1"
  }
}
